.b-login-form-container
    display flex
    align-items center
    justify-content center
    height 400px

    form
        max-width 50%
        .b-form-row
            margin 0 0 20px 0
            display flex
            flex-direction row
            label
                flex-basis 50%
                display block
                flex-grow 1
                line-height 2
                padding 0 10px 0 0
                font-size 0.9em
            input
                text-transform lowercase
                border 1px solid rgba(0, 0, 0, 0.1)
                flex-basis 50%
                display block
                flex-grow 1
                padding 0 5px
                min-width 200px

    .b-error-message-container
        font-size 0.8em
        background-color rgba(255, 0, 0, 0.1)
        color red
        text-align center
        padding 10px
        margin 0 0 10px 0
        display none

@media only screen and (min-device-width: 320px) and (max-device-width: 480px) and (-webkit-min-device-pixel-ratio: 2)
    .b-login-form-container
        form
            max-width initial
        form
            label
                color #666
            input[type="submit"]
                display block
        .b-actions-area
            display flex
            flex-direction column
            justify-content center

            input[type="submit"]
                margin-bottom 20px
                padding 15px 0
                background #496bff
                border 0
                border-radius 4px
                color #fff
                font-size 1em

            a
                display block
                text-align center
                font-size 0.8em
                color #2c60ff