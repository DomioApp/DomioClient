#pager-container
    margin 0 auto
    border-top 1px solid rgba(#0d3243, 0.2)
    ul.pages-list
        margin 0 auto
        display flex
        justify-content center
        li
            a
                flex-grow 1
                display block
                text-decoration none
                text-align center
                width 50px
                line-height @width
                color #333
                font-size 0.9em
                transition background-color 0.1s ease

                &.active-page-link
                    background-color #0d3243
                    color #fff
                    font-size 1em
                    &:hover
                        background #0d3243
                &:hover
                    background rgba(#0d3243, 0.05)