#search-bar-container
    background rgba(0, 0, 0, 0.03)
    margin 0 0 50px 0
    #search-bar-form
        padding 60px 0
        width 600px
        margin 0 auto
        position relative
        display flex
        #search-bar-input
            display block
            padding 20px
            font-size 0.9em
            box-sizing border-box
            border 1px solid rgba(0, 0, 0, 0.2)
            border-right none
            flex-grow 2
        #search-bar-submit
            flex-grow 1
            flex-basis 20px
            box-sizing border-box
            border 1px solid rgba(0, 0, 0, 0.2)
            background #1abf6a
            color #fff
            font-size 1em
            cursor pointer
            i
                line-height 1.3em
