extends ../layouts/default

block body
    input#domain-name(value=domainName, type='hidden')
    input#domain-price(value=price, type='hidden')
    p= domainName
    p= '$' + price + ' per month'
    p= 'Minimum period: ' + period + ' months'
    select
        option 1 month
        option 2 months
        option 3 months
        option 4 months
        option 5 months
        option 6 months
        option 1 year
    if !isLoggedIn
        p before renting this domain, please login or signup
    form#rent-domain-form(action='/your-charge-code', method='POST')
        span.payment-errors
        .form-row
            label
                span Card Number
                input#payment-form-cardnumber-input(type='text', size='20', data-stripe='number', value='4242424242424242')
        .form-row
            label
                span Expiration (MM/YY)
                input#payment-form-expmonth-input(type='text', size='2', data-stripe='exp_month',value=12)
            span  /
            input#payment-form-expyear-input(type='text', size='2', data-stripe='exp_year',value=19)
        .form-row
            label
                span CVC
                input(type='text', size='4', data-stripe='cvc')
        input.submit(type='submit', value='Submit Payment')
